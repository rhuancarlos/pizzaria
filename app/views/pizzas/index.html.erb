<p id="notice"><%= notice %></p>

<h1>Listing Pizzas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Foto</th>
      <th>Ingredientes</th>
      <th>Precop</th>
      <th>Precom</th>
      <th>Precog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.nome %></td>
        <td><%= pizza.foto %></td>
        <td><%= pizza.ingredientes %></td>
        <td><%= pizza.precop %></td>
        <td><%= pizza.precom %></td>
        <td><%= pizza.precog %></td>
        <td><%= link_to 'Show', pizza %></td>
        <td><%= link_to 'Edit', edit_pizza_path(pizza) %></td>
        <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

