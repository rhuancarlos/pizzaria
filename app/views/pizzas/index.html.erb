<div class="col-md-2 col-sm-2 col-xs-12 temp-nav">
    <%= render 'menu' %>
</div>
<div class="col-md-10 col-sm-10 col-xs-12">
    <div class="row">
        <% if notice%>
          <div class="alert alert-success" role="alert"><p id="notice"><%= notice %></p></div>
        <% end %>
    </div>
    <div class="row">
      <div class="col-md-4 col-xs-4">
          <h3>Lista de Pizzas</h3>
      </div>
      <div class="col-md-8 col-xs-8 temp">
        <%= form_tag pizzas_path, method: :get, class: "form-horizontal text-right tmpt-form-pesq" do %>
                <%= text_field_tag :q, @query_pesquisada, class: "span3 " %> 
                <%= button_tag :submit do %>
                  <span class='glyphicon glyphicon-search' aria-hidden='true'></span>
                <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Foto</th>
              <th>P. Pequena</th>
              <th>P. Media</th>
              <th>P. Grande</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @pizzas.each do |pizza| %>
              <tr>
                <td><%= pizza.nome %></td>
                <td><%= pizza.foto %></td>
                <td><%= pizza.precop %></td>
                <td><%= pizza.precom %></td>
                <td><%= pizza.precog %></td>
                <td class="pull-right">
                  <%= link_to raw("<span class='glyphicon glyphicon-eye-open' aria-hidden='true'></span>"), pizza , :class => 'btn btn-primary' , :title => "Visualizar" %>
                  <%= link_to raw("<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>"), edit_pizza_path(pizza) , :class => 'btn btn-success' , :title => "Editar" %>
                  <%= link_to raw("<span class='glyphicon glyphicon-minus-sign' aria-hidden='true'></span>"), pizza, :class => 'btn btn-danger' , :title => "Excluir", method: :delete, data: { confirm: 'Confirma ExclusÃ£o ?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>