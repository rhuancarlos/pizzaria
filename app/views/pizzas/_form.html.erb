<%= form_for @pizza , html: {class: "form-horizontal"} do |f|   %>
  <div class="form-group">
    <%= f.label :nome, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :foto, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :foto, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ingredientes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :ingredientes, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :precop, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :precop, :class => "form-control" %>
    </div>
  </div>
<div class="form-group">
    <%= f.label :precom, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :precom, :class => "form-control" %>
    </div>
  </div>
<div class="form-group">
    <%= f.label :precog, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :precog, :class => "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit , :class => 'btn btn-success'  do %>
        <span class='glyphicon glyphicon-ok' aria-hidden='true'></span> Salvar
      <% end %>
    </div>
  </div>
<% end %>